msgid ""
"BIND has been updated to version "
"9.9.5. "
"http://svn.freebsd.org/viewvc/base?view=revision&revision=262706[r262706] "
"(Sponsored by DK Hostmaster A/S)"
msgstr ""

#. type: Plain text
#: website/content/en/releases/9.3R/relnotes.adoc:309
msgid ""
"The man:xz[1] utility has been updated to a post-5.0.5 "
"snapshot. "
"http://svn.freebsd.org/viewvc/base?view=revision&revision=263286[r263286]"
msgstr ""

#. type: Plain text
#: website/content/en/releases/9.3R/relnotes.adoc:311
msgid ""
"OpenSSH has been updated to version "
"6.6p1. "
"http://svn.freebsd.org/viewvc/base?view=revision&revision=263970[r263970]"
msgstr ""

#. type: Plain text
#: website/content/en/releases/9.3R/relnotes.adoc:313
msgid ""
"OpenSSL has been updated to version "
"0.9.8za. "
"http://svn.freebsd.org/viewvc/base?view=revision&revision=267285[r267285]"
msgstr ""

